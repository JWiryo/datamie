<h1>Edit Product Details</h1>

<%= form_for :products, url: admin_product_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', :value=>@edit_name %><br/>
  <%= f.label :qty, 'Quantity' %>
  <%= f.number_field :qty, class: 'form-control', :value=>@edit_qty %><br/>
  <%= f.label :price %>
  <%= f.number_field :price, class: 'form-control', :value=>@edit_price %><br/>
  <%= f.submit :class=>" btn btn-success form-control" %>
<% end %>
